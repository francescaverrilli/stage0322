<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
	http://www.springframework.org/schema/beans/spring-beans-2.5.xsd">

	<bean id="OutputHelper" class="com.lr.OutputHelper">
		<property name="outputGenerator"> 
			<ref bean="CsvOutputGenerator" />
		</property>
	</bean>
 
	<bean id="CsvOutputGenerator" class="com.lr.CsvOutputGenerator" />
	
		<bean id="OutputHelperJson" class="com.lr.OutputHelper">
		<constructor-arg>
			<ref bean="JsonOutputGenerator" />
		</constructor-arg>
	</bean>
 	
	<bean id="JsonOutputGenerator" class="com.lr.JsonOutputGenerator" />

</beans>

